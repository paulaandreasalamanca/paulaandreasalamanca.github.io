{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "title": {
    "text": "Unemployment in the USA (1948-2025)",
    "anchor": "start",
    "subtitle": "Ages 16 and over, % | Source: FRED through ECO API",
    "font": "Manrope",
    "fontSize": 14,
    "subtitleFontSize": 12,
    "subtitleFont": "Manrope",
    "color": "#000000",
    "subtitleColor": "#000000"
  },
  "autosize": {"type": "fit", "contains": "padding"},
  "background": "white",
  "view": {"fill": "white", "strokeOpacity": 0},
  "data": {
    "url": "https://api.economicsobservatory.com/usa/unem?vega",
    "format": {"type": "json"}
  },
  "mark": 
    {"type": "line", 
    "color": "#0b6380", 
    "strokeWidth": 1},
  "encoding": 
  {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": 
        {"title": "Years", 
        "titleColor": "#000000", 
        "titleFontSize": 12,
        "titleFont": "Manrope",
        "labelFont": "Manrope",
        "grid": true,
        "gridColor": "#d7d7d7",
        "gridOpacity": 0.4,
        "gridDash": [2, 2]
        }
      
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": 
      {"title": "% Unemployment", 
        "titleColor": "#1a1a1a", 
        "titleFont": "Manrope",
        "labelFont": "Manrope",
        "grid": true,  
        "gridColor": "#d7d7d7",
        "gridOpacity": 0.4,
        "gridDash": [2, 2],
        "titleFontSize": 12
        }
    }
  }
}