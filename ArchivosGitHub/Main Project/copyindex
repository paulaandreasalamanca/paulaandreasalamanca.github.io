                {"variable": "Post √ó FARC Medium", "coef": -20.57, "ci_low": -61.5, "ci_high": 20.4, "significant": false, "order": 1},
                {"variable": "Post √ó FARC Low", "coef": -33.28, "ci_low": -73.1, "ci_high": 6.5, "significant": false, "order": 2}
            ]
        },
        "layer": [
            {
                "mark": {"type": "rule", "strokeWidth": 3, "strokeCap": "round"},
