    <script>
        // Modal functionality
        document.querySelectorAll('.modal-term').forEach(term => {
            term.addEventListener('click', () => {
                const modalId = 'modal-' + term.dataset.modal;
                document.getElementById(modalId).classList.add('active');
            });
        });

        document.querySelectorAll('.modal-overlay').forEach(overlay => {
            overlay.addEventListener('click', (e) => {
                if (e.target === overlay) {
                    overlay.classList.remove('active');
                }
            });
        });

        document.querySelectorAll('.modal-close').forEach(btn => {
            btn.addEventListener('click', () => {
                btn.closest('.modal-overlay').classList.remove('active');
            });
        });
    </script>



    <script>
    // Cargar gr√°ficas
    vegaEmbed('#chart-conflict', 'Chart1.1timeline.json', {actions: false});
    vegaEmbed('#chart-deforestation', 'Chart1.2timeline.json', {actions: false});

    // Scrollytelling logic - SOLO para la secci√≥n paradox
const textSteps = document.querySelectorAll('.paradox-section .text-step');
const chartWrappers = document.querySelectorAll('.paradox-section .chart-wrapper');

function updateActiveStep() {
    const viewportCenter = window.scrollY + window.innerHeight * 0.5;

    textSteps.forEach((step, index) => {
        const rect = step.getBoundingClientRect();
        const stepTop = window.scrollY + rect.top;
        const stepBottom = stepTop + rect.height;

        if (viewportCenter >= stepTop && viewportCenter < stepBottom) {
            chartWrappers.forEach(c => c.classList.remove('active'));
            const targetChart = document.querySelector(`.paradox-section .chart-wrapper[data-step="${index}"]`);
            if (targetChart) targetChart.classList.add('active');
        }
    });
}

window.addEventListener('scroll', updateActiveStep);
updateActiveStep();

   
</script>

<script>
// Modal TWFE Functions
function openModal(modalId) {
    const modal = document.getElementById(modalId);
    modal.classList.add('active');
    document.body.style.overflow = 'hidden';
    
    if (modalId === 'twfe-modal') {
        renderTWFECoefPlot();
    }
}

function closeModal(modalId) {
    const modal = document.getElementById(modalId);
    modal.classList.remove('active');
    document.body.style.overflow = 'auto';
}

document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
        const activeModal = document.querySelector('.modal-overlay.active');
        if (activeModal) {
            activeModal.classList.remove('active');
            document.body.style.overflow = 'auto';
        }
    }
});

function renderTWFECoefPlot() {
    const spec = {
        "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
