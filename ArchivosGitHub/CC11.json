{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "title": {
        "text": "Declining populations",
        "subtitle": "Cumulative % change in population. Source: UN.",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start",
        "color": "black"
    },
    
    "data": {
        "url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/main/data/demographicsUNPopChange.csv"
    },
    
    "transform": [
        {
            "fold": ["S Korea", "Japan", "UK", "Italy", "Spain", "France", "US"],
            "as": ["Country", "Value"]
        }
    ],
    
    "height": 300,
    "width": 240,

    "mark": {
        "type": "line",
        "strokeWidth": 2
    },

    "encoding": {
        "x": {
            "field": "Year",
            "type": "temporal",
            "title": "Year"
        },

        "y": {
            "field": "Value",
            "type": "quantitative",
            "title": null
        },

        "color": {
            "field": "Country",
            "type": "nominal",
            "scale": {
                "domain": ["S Korea", "Japan", "UK", "Italy", "Spain", "France", "US"],
                "range": ["black", "yellow", "orange", "lightgrey", "lightblue", "pink", "lightgreen"]
            },
            "legend": {"title": "Country"}
        }
    }
}