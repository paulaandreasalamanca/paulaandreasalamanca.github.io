{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": ["Trends in median net wealth by age of household head"],
    "anchor": "start",
    "subtitle": "Spain, 2000-2020 (in thousands of euros)",
    "font": "Manrope",
    "fontSize": 14,
    "subtitleFontSize": 12,
    "subtitleFont": "Manrope",
    "color": "#000000",
    "subtitleColor": "#000000",
    "offset": 6
  },
  "width": "container",
  "height": "container",
  "autosize": {"type": "fit", "contains": "padding", "resize": false},
  "background": "white",
  "data": {
    "url": "https://raw.githubusercontent.com/paulasalamancar/paulasalamancar.github.io/refs/heads/main/DataCodingCha3.1.csv"
  },
  "transform": [
    {
      "calculate": "datum.categoria == 'Menor de 35' || datum.categoria == 'Entre 35 y 44' ? 'Under 45' : datum.categoria == 'Entre 45 y 54' || datum.categoria == 'Entre 55 y 64' ? '45–64' : 'Over 65'",
      "as": "age_group"
    },
    {
      "aggregate": [{"op": "mean", "field": "valor", "as": "valor"}],
      "groupby": ["ola", "age_group"]
    }
  ],
  "mark": {
    "type": "line",
    "strokeWidth": 2,
    "point": {"filled": true, "size": 40}
  },
  "encoding": {
    "x": {
      "field": "ola",
      "type": "temporal",
      "title": "Years",
      "axis": {
        "grid": true,
        "gridColor": "#d7d7d7",
        "gridOpacity": 0.4,
        "gridDash": [2, 2],
        "format": "%Y",
        "titleColor": "#000000",
        "titleFont": "Manrope",
        "labelFont": "Manrope",
        "labelAngle": 0
      }
    },
    "y": {
      "field": "valor",
      "type": "quantitative",
      "title": "Thousands of euros",
      "axis": {
        "grid": true,
        "gridColor": "#d7d7d7",
        "titleColor": "#000000",
        "titleFont": "Manrope",
        "labelFont": "Manrope",
        "gridOpacity": 0.4,
        "gridDash": [2, 2]
      }
    },
    "color": {
      "field": "age_group",
      "type": "ordinal",
      "title": "Age group",
      "scale": {
        "domain": ["Under 45", "45–64", "Over 65"],
        "range": ["#a8d5e5", "#0b6380", "#053d4a"]
      },
      "legend": {
        "orient": "bottom",
        "direction": "horizontal",
        "title": null,
        "columns": 3,
        "labelFontSize": 10,
        "labelFont": "Manrope",
        "symbolSize": 55,
        "symbolStrokeWidth": 2,
        "offset": 8
      }
    }
  },
  "config": {
    "background": "#ffffff",
  "view": {"stroke": "transparent"}
  }
}